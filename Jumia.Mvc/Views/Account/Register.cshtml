@model RegisterViewModel
@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization;

@inject IViewLocalizer localizer
@{
    var isRtl = CultureInfo.CurrentCulture.Name.StartsWith("ar");
}
@{
    ViewData["Title"] = "Create Account";
    Layout = "~/Views/Shared/_loginLayout.cshtml";

}

<head>
    <link href="~/css/Account.css" rel="stylesheet" />
    <style>
        body {
            font-family: sans-serif;
            margin: 0;
            padding: 0;
        }

        .parent {
            border: 2px solid #ddd;
            margin-bottom: 50px;
        }

        .create {
            text-align: left;
        }

        .header {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .logo img {
            width: 130px;
        }

        .main {
            padding: 20px;
        }

        .registration-container {
            width: 100%;
            max-width: 500px;
            margin: 0 auto;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 5px;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
        }

            .registration-container h1 {
                margin-bottom: 20px;
                text-align: center;
            }

        .form-group {
            margin-bottom: 20px;
        }

        .form-control {
            padding: 10px;
            border-radius: 4px;
            border: 1px solid #ddd;
        }

        .form-check {
            margin-bottom: 20px;
        }

        .footer {
            text-align: center;
            margin-top: 20px;
        }

        .main {
            margin-bottom: 50px;
        }

        .btn {
            background-color: #FFD814;
            width: 100%;
        }
    </style>
</head>

<main class="main">
    <div class="registration-container">
        <header class="header">
            @*   <a href="#" class="logo">
            <img src="~/images/amazon.webp" alt="Company Logo">
            </a> *@
        </header>
        <h1 class="create">@localizer["Create account"]</h1>
        <form asp-action="Register">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-label-for="Name">@localizer["UserName"]</label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-label-for="Email">@localizer["Email"]</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-label-for="Password">@localizer["Password"]</label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
                <div class="password-info">
                    <p>@localizer["At least 6 characters"]</p>
                </div>
            </div>

            <div class="form-group">
                <label asp-label-for="ConfirmPassword">@localizer["Confirm Password"]</label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="agreeCheckbox">
                    <label class="form-check-label" for="agreeCheckbox">
                        @localizer["By continuing, you agree to Amazon's"] <a href="#">@localizer["Conditions of Use"]</a>  <a href="#"></a>.
                    </label>
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn">@localizer["Create account"]</button>
            </div>
        </form>
        <div class="footer">
            <p>@localizer["Already have an account"]? <a asp-action="Login">@localizer["Sign in"]</a></p>
        </div>
    </div>

</main>
