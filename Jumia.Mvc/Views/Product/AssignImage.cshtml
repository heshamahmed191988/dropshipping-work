@using Microsoft.AspNetCore.Mvc.Localization;
@using System.Globalization

@inject IViewLocalizer localizer
@{
    var isRtl = CultureInfo.CurrentCulture.Name.StartsWith("ar");
}
@{
    ViewData["Title"] = @localizer["Assign Image to Product"];
}
<style>
    .form {
        width: 60%;
        padding: 3%;
        margin-left: 20%;
        background-color: white !important;
        margin-bottom: 0%;
        border-radius: 18px;
        padding-bottom: 0%;
    }

    .form-control {
        height: fit-content !important;
    }

    label {
        color: black !important;
    }

    h3 {
        padding: 5%;
        font-family: "Galada", cursive;
    }

    .btn {
        padding: 10px 25px;
        font-family: "Roboto", sans-serif;
        font-weight: 500;
        background: transparent;
        outline: none !important;
        cursor: pointer;
        transition: all 0.3s ease;
        position: relative;
        display: inline-block;
    }

    .btn {
        border: 2px solid #2275fc;
        z-index: 1;
        color: white;
        margin: 3%;
        background-color: #2275fc;
    }

        .btn:after {
            position: absolute;
            content: "";
            width: 100%;
            height: 0;
            top: 0;
            left: 0;
            z-index: -1;
            background: rgb(255, 255, 255);
            transition: all 0.3s ease;
        }

        .btn:hover {
            color: rgb(0, 0, 0);
        }

            .btn:hover:after {
                top: auto;
                bottom: 0;
                height: 100%;
            }

    label {
        color: white;
    }
</style>
<body>
    <h3>@ViewData["Title"]</h3>

    <form asp-action="AssignImages" method="post" enctype="multipart/form-data">
        <input type="hidden" name="productId" value="@ViewBag.ProductId" />
        <div class="form-group">
            <label for="imageFiles">@localizer["Image File"]</label>
            <input type="file" name="imageFiles" class="form-control" multiple />
        </div>
        <button type="submit" class="btn btn-primary">@localizer["Upload Image"]</button>
        <a asp-action="Index" class="btn btn-secondary" style="margin: 10px;">@localizer["Back  TO List"]</a>
    </form>
</body>
