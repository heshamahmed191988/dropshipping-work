<body>
    <h2>@localizer["Proudect Details"]</h2>
    <form method="post">
        <div class="form">
            <div class="form-group">
                <label asp-for="NameEn">@localizer["English Name"]</label>
                <input asp-for="NameEn" class="form-control" />

                <span asp-validation-for="NameEn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NameAr">@localizer["Arabic Name"]</label>
                <input asp-for="NameAr" class="form-control" />

                <span asp-validation-for="NameAr" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price">@localizer["Price"]</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="StockQuantity">@localizer["StockQuantity"]</label>
                <input asp-for="StockQuantity" class="form-control" />
                <span asp-validation-for="StockQuantity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DescriptionEn">@localizer["DescriptionEn"]</label>
                <input asp-for="DescriptionEn" class="form-control" />
                <span asp-validation-for="DescriptionEn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescriptionAR">@localizer["DescriptionAR"]</label>
                <input asp-for="DescriptionAR" class="form-control" />
                <span asp-validation-for="DescriptionAR" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BrandNameEn">@localizer["BrandNameEn"]</label>
                <input asp-for="BrandNameEn" class="form-control" />
                <span asp-validation-for="BrandNameEn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BrandNameAr">@localizer["BrandNameAR"]</label>
                <input asp-for="BrandNameAr" class="form-control" />
                <span asp-validation-for="BrandNameAr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateListed">@localizer["DateListed"]</label>
                <input asp-for="DateListed" class="form-control" />
                <span asp-validation-for="DateListed" style="color:red"></span>
            </div>

            <div class="form-group">
                <label asp-for="SellerName"></label>
                <input asp-for="SellerName" class="form-control" />
                <span asp-validation-for="SellerName" style="color:red"></span>
            </div>



            <div class="form-group">
                <label asp-for="CategoryNameEn">@localizer["CategoryNameEn"]</label>
                <input asp-for="CategoryNameEn" class="form-control" />
                <span asp-validation-for="CategoryNameEn" style="color:red"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryNameAr">@localizer["CategoryNameAR"]</label>
                <input asp-for="CategoryNameAr" class="form-control" />
                <span asp-validation-for="CategoryNameAr" style="color:red"></span>
            </div>
        </div>
    </form>
