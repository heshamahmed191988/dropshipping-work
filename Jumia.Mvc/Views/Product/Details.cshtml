        width: 79%;
        padding: 3%;
        margin-left: 10%;
        background-color: white !important;
        margin-bottom: 5%;
        border-radius: 2%;
        margin-top: 0px;
        position: relative;
        top: 34px;
    }

    form input {
        border-radius: 1rem !important;
    }

        form input .form-control {
